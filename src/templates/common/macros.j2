{% macro make_menu(menu_items, active_item) %}
  {% for link in menu_items %}
    <a{% if link.href == active_item %} class="active"{% endif %} href="{{ link.href }}.html">{{ link.title }}</a>
  {% endfor %}
{% endmacro %}

{% macro icon(icon_name, width=24, height=24, class_name=None, filename='img/sprite.svg') -%}
  {#
  Генерирует обертку с svg иконкой, взятую из спрайта

  Parameters:
  @param {string} class_name - Класс тега svg. Передается в кавычках.
  @param {string} icon_name - Название иконки в спрайте. Передается в кавычках.
  @param {number} width - Ширина изображения, по-умолчанию 24.
  @param {number} height - Высота изображения, по-умолчанию 24.
  @param {string} filename - Путь к спрайту
  #}
  <svg{% if class_name %} class="{{ class_name }}"{% endif %} width="{{ width }}" height="{{ height }}">
    <use href="{{ filename }}#{{ icon_name }}"></use>
  </svg>
{%- endmacro %}
